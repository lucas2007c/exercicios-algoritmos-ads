   // Produto 1
   escreva("Digite o preço de custo do primeiro produto: ")
   leia(precoCusto)
   escreva("Digite o preço de venda do primeiro produto: ")
   leia(precoVenda)
   precoTotalCusto := precoTotalCusto + precoCusto
   precoTotalVenda := precoTotalVenda + precoVenda
   resultado := precoVenda - precoCusto
   se(resultado > 0) entao
      escreval("Houve um lucro de R$", resultado:1:2)
   senao
      se(resultado < 0) entao
         escreval("Houve um prejuízo de R$", resultado:1:2)
      senao
         escreval("Não houve lucro nem prejuízo")
      fimse
   fimse

